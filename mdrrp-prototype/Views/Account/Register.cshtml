@model mdrrp_prototype.Models.RegisterViewModel
@{
    /**/

    ViewBag.Title = "Register";
}

<h2>User Registration</h2>

<div style="margin-bottom: 50px">
    @Html.ActionLink("Back to users","UserRoles","Manage",null,new {@class="btn btn-info pull-right"})
</div>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="heading-text">Account Details</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
        <div class="col-md-8">
            @Html.AntiForgeryToken()

            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
                <div class="row">
                    <div class="col-md-6">
                        @Html.DropDownList("Title", new List<SelectListItem>
                          {
                              new SelectListItem{Text = "Mr", Value ="Mr"},
                              new SelectListItem{ Text = "Mrs", Value = "Mrs"},
                              new SelectListItem{Text = "Miss", Value = "Miss"},
                              new SelectListItem{ Text = "Ms", Value ="Ms"}

                          }, "Select Title", new { @class = "form-control" }

                            )
                    </div>
                    <div class="col-md-2 text-danger">
                        *
                    </div>
                </div>
                
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
                <div class="row">
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", PlaceHolder = "Enter first name" })

                    </div>
                    <div class="col-md-2 text-danger">
                        *
                    </div>
                </div>
               
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
                <div class="row">
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", PlaceHolder = "Enter surname" })

                    </div>
                    <div class="col-md-2 text-danger">
                        *
                    </div>
                </div>
               
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="row">
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", PlaceHolder = "Enter email" })

                    </div>
                    <div class="col-md-2 text-danger">
                        *
                    </div>
                </div>
                
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.UserRole, "User Role", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="row">
                    <div class="col-md-6">
                        @Html.DropDownList("UserRole", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserRole, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-2 text-danger">
                        *
                    </div>
                </div>
               
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                <div class="row">
                    <div class="col-md-6">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", PlaceHolder = "Enter password" })

                    </div>
                    <div class="col-md-2 text-danger">
                        *
                    </div>
                </div>
                
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                <div class="row">
                    <div class="col-md-6">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", PlaceHolder = "Confirm password" })

                    </div>
                    <div class="col-md-2 text-danger">
                        *
                    </div>
                </div>
                
            </div>
            <div class="form-group">
                
                    <div class="col-md-6 col-md-offset-2">
                        <input type="submit" class="btn btn-primary btn-block" value="Register" />

                    </div>
                    <div class="col-md-2">
                        
                    </div>
                
               
            </div>
        </div>
           
        }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
