@model mdrrp_prototype.Models.ProjectComponent

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Auth.cshtml";
}

<h2>Edit  Component @Model.Name</h2>
<hr/>
<div style="margin-bottom: 70px">
    @Html.ActionLink("Back to Component","Index","Component",new {id = Model.ProjectId},new {@class="btn btn-info pull-right"})

</div>
@using (Html.BeginForm("Save","Component"))
{
    @Html.AntiForgeryToken()
    
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="heading-text">Component Details</h3>
        </div>
        <div class="panel-body">
            <div class="col-md-8">
                <div class="form-horizontal">
                    <h6>THE <span class="text-danger">*</span> DENOTES REQUIRED FIELD</h6>
                    <hr />

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })

                        <div class="row">
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "Component Name" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-2 text-danger">
                                *
                            </div>
                        </div>

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Budget, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="row">
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.Budget, new { htmlAttributes = new { @class = "form-control", PlaceHolder = "100000 [no symbols allowed]" } })
                                @Html.ValidationMessageFor(model => model.Budget, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-2 text-danger">
                                *
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="row">
                            <div class="col-md-6">
                                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows="5"})
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-2 text-danger">
                                *
                            </div>
                        </div>

                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-warning btn-block" />
                        </div>
                    </div>
                </div>
               </div>
            </div>
        </div>
   

    @Html.HiddenFor(model => model.ProjectId)
}


