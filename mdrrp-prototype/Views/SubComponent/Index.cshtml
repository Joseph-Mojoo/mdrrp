@model IEnumerable<mdrrp_prototype.Models.SubComponent>

@{
    ViewBag.Title = "Subcomponent";
    Layout = "~/Views/Shared/_Auth.cshtml";

   

    
}

<h2>Subcomponents available</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]

    </div>
}

@Html.ActionLink("Create New", "Create", "SubComponent", new { id = Request.Url.Segments.Last() }, new { @class = "btn btn-primary", style="margin-bottom:10px;" })
@Html.ActionLink("Back To Components","Index","Component", new { id = ViewBag.ProjectId }, new {@class= "btn btn-info pull-right" })
<div class="panel panel-primary">
    <div class="panel-heading">

        <h3 class="heading-text">@Model.First().ProjectComponent.Name Subcomponents List </h3>
    </div>

    <div class="panel-body">
        <table class="table table-bordered table-responsive">
            <tr>
           
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Budget)
                </th>
               
                <th>Action</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Budget)
                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id, projectComponentId = Request.Url.Segments.Last() }, new { @class = "btn btn-info" }) |
                        @Html.ActionLink("Intermediate Indicators", "Details", new { id = item.Id }, new { @class = "btn btn-default" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger", onclick="return confirm('Are you sure you want to delete the subcomponet?')" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

